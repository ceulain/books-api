    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["./**/*"]
}
